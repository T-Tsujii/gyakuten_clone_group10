<div class="base-container">
  <div>
    <h2 class="text-left pt-5">新規投稿</h2>

    <%= form_with model: @question do |question| %>
      <div class="form_group pt-4 pb-3">
        <p>【質問】</p>
        <%= question.text_area :title, class: "form-question" %>
      </div>

      <div class="form-group" >
        <p>【詳細】</p>
        <%= question.text_area :detail, class: "form-detail" %>
      </div>

      <div class="text-center">
        <%= question.submit "送信", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <% @questions.each do |question| %>
    <%= link_to( question_path(question), class: 'list-question') do %>
    <div class="question">
      <%= question.title.truncate(30) %><br>
      <%= question.detail.truncate(20) %><br>
    </div>
    <% end %>
  <% end %>
</div>
