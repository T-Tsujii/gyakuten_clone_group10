<%= form_with(model: @question, local: true) do |question| %>
  <div class="form_group pt-4 pb-3">
    <p>【質問】</p>
    <%= question.text_area :title, class: "form-question" %>
  </div>

  <div class="form-group" >
    <p>【詳細】</p>
    <%= question.text_area :detail, class: "form-detail" %>
  </div>

  <div class="text-center">
    <!--送信ボタンの横幅変更-->
    <%= question.submit "送信", class: "btn btn-primary btn-lg btn-block", data: {confirm: '新規投稿しますか？'} %>
  </div>
<% end %>
